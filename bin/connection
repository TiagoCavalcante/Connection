<?php
	require_once __DIR__ . '/../../../autoload.php';

	switch ($argv[1]) {
		case 'new':
			Connection\Migrations::new($argv[2] . '.php');

			break;
		case 'run':
			Connection\Migrations::run($argv[2] . '.php');

			break;
		case 'back':
			Connection\Migrations::back($argv[2] . '.php');

			break;
		default:
			throw new Exception('This option doesn\'t exist. Type the option help to get help.');

			break;
	}
?>